{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [ 
            "../pixi-jsdoc.js",
            "../../src/Phaser.js", 
            "../../src/animation/", 
            "../../src/core/", 
            "../../src/gameobjects/", 
            "../../src/geom/", 
            "../../src/input/", 
            "../../src/loader/", 
            "../../src/math/", 
            "../../src/net/", 
            "../../src/particles/", 
            "../../src/physics/", 
            "../../src/sound/", 
            "../../src/system/", 
            "../../src/tilemap/", 
            "../../src/time/", 
            "../../src/tween/", 
            "../../src/utils/" 
        ],
        "exclude": [
            "../../src/physics/p2/p2.js"
        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins"   : [
        "local-plugins/proptomember",
        "local-plugins/sourceproxy",
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks"     : false,
        "monospaceLinks"  : false,
        "default"         : {
            "outputSourceFiles" : true
        },
        "systemName"      : "Phaser",
        "footer"          : "",
        "copyright"       : "Phaser Copyright Â© 2012-2014 Photon Storm Ltd.",
        "navType"         : "vertical",
        "theme"           : "cerulean",
        "linenums"        : true,
        "collapseSymbols" : false,
        "inverseNav"      : true
    },
    "markdown"  : {
        "parser"   : "gfm",
        "hardwrap" : true
    },
    "opts": {
        "template": "docstrap-master/template/",
        "encoding": "utf8",
        "destination": "../",
        "recurse": true,
        "private": false,
        "lenient": true
    }
}
